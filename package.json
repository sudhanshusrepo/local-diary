{
  "name": "local-diary-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "mobile": "npm start --workspace=@local-diary/app-mobile",
    "mobile:ios": "npm run ios --workspace=@local-diary/app-mobile",
    "mobile:android": "npm run android --workspace=@local-diary/app-mobile",
    "build": "npm run build --workspace=@local-diary/app-web",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "@google/genai": "latest",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@vitejs/plugin-react": "latest",
    "jsdom": "^24.0.0",
    "vite": "latest",
    "vitest": "^1.6.0"
  }
}